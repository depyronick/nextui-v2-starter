{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@ui/*": [
        "./components/ui/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}